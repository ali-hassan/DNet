<main class="main">
  <div class="main-content">
    <!-- Content Block 1 Start -->
    <div class="main-content-block">
      <div class="heading">
        <%- if current_user.is_valid_kyc%>
          <h1>
            <span>KYC</span>
            <span style="color: green;"> (Verified)</span>
          </h1>
        <%else%>
          <h1>
            <span>KYC</span>
            <%- if current_user.reject_kyc%>
              <span style="color: red;"> (Rejected) Please, contact to support team.</span>
            <%else%>
                <span style="color: red;"> (Not Verified)</span>
            <%end%>
          </h1>
        <%end%>
      </div>
      <div class="heading">
        <h4>Proof of your identity</h4>
      </div>
      <div class="main-content-body">
        <div class="acount-holder">
          <%= form_for current_user, url: kyc_url(subdomain: 'office') do |f| %>

              <div class="custom-dashboard-row">
                <div class="custom-dashboard-column">
                  <label>Full Name</label>
                  <input type="text" value="<%= current_user.full_name %>" disabled="true">
                </div>
                <div class="custom-dashboard-column">
                  <label>Father Name</label>
                  <%= f.text_field :father_name, required: true %>
                </div>
              </div>

              <div class="custom-dashboard-row">
                <div class="custom-dashboard-column">
                  <label>Date of Birth</label>
                  <%= f.date_field :dob, required: true %>
                </div>
                <div class="custom-dashboard-column">
                  <label>ID Number</label>
                  <%= f.text_field :document_number, required: true %>
                </div>
              </div>

              <div id="uploaded_document" style="max-width: 300px;max-height: 300px;">
              </div>
              <%- if current_user.document.try(:url).present?%>
                  <%= image_tag(current_user.document.url, width: "200px")%>
              <%end%>
              <div class="heading">
                <h4>Proof of your address</h4>
              </div>

              <div class="custom-dashboard-row">
                <div class="custom-dashboard-column">
                  <label>Enter your address</label>
                  <%= f.text_field :address, required: true  %>
                </div>
              </div>
              <div class="heading">
                <h4>Please Upload a picture with your face while holding up your photo identification.</h4>
              </div>

              <div class="custom-dashboard-row">
                <div class="custom-dashboard-column document-upload">
                  <%= f.label :document do %>
                    <%= image_tag "ic_upload.png" %>
                  <% end %>
                  <%= f.file_field :document, class: 'document-upload document-upload-field hide', required: true %>
                </div>
              </div>


              <div class="button-holder">
                <input class="custom-btn" type="submit" value="Save">
              </div>
          <% end %>
        </div>

      </div>
    </div>
    <!-- Content Block 1 End -->
  </div>
</main>
