<div class="container-fluid">
  <div id="content">
    <div class="bg-login">
      <div class="row">
        <div class="col-lg-3 offset-lg-1">
          <div class="d-flex justify-content-center h-100">
            <div class="form_container">
              <div class="logo-style">
                <%= image_tag "logo-login.png", class: "img-responsive" %>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="container h-100">
            <div class="d-flex justify-content-center h-100">
              <div class="user_card">
                <div class="d-flex justify-content-center form_container text-center">

                  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                      <%= f.hidden_field :reset_password_token %>
                      <h4>Enter New Password</h4>
                      <br>
                      <% if @minimum_password_length %>
                          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                      <% end %>
                      <%= devise_error_messages! %>
                      <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "Enter Password" %>
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Re-Enter Password", style: "margin: 10px 0px;" %>
                      <!--<input type="checkbox" class="custom-control-input" id="customControlInline">-->
                      <!--<label class="custom-control-label" for="customControlInline">Remember me</label>-->
                      <div class="justify-content-center mt-3 login_container">
                        <button type="submit" name="button" class="btn yellow_btn">Change Password</button>
                      </div>
                  <% end %>
                </div>
                <div class="mt-4">
                  <div class="d-flex justify-content-center links">
                    <a href="<%=new_user_session_url(subdomain: 'office')%>">Sign in</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
