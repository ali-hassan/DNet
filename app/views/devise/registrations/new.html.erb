<div id="content">
  <div class="bg-login">
    <div class="row">
      <div class="col-lg-4 offset-lg-2">
        <div class="d-flex justify-content-center h-100">
          <div class="form_container">
            <%= image_tag "logo-login.png", class: "img-responsive" %>
          </div>
        </div>
      </div>
      <div class="col-lg-4">
        <div class="container h-100">
          <div class="d-flex justify-content-center h-100">
            <div class="user-card">
              <div class="d-flex justify-content-center form_container text-center">
               <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                  <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control input_user" %>

                  <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <%= f.password_field :password, autocomplete: "off" , class: "form-control input_user", placeholder: "Password" %>

                  <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control input_user", placeholder: "Confirm Password" %>

               <% end %>

              </div>
              <div class="d-flex justify-content-center mt-3 login_container">
                <button type="submit" name="button" class="btn singin_btn">Sign Up</button>
              </div>
              <div class="mt-4">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
