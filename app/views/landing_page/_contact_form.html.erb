<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Write Your Message</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true" class="float-right" style="margin-left: 225px;">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= form_for :contact, url:contact_us_path  do |f| %>
      <div class="form-group">
        <%= f.label :name %>:
        <%= f.text_field :name,class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label :body %>:
        <%= f.text_area :body,class:"form-control", size: "20x15"%>
      </div>

      <%=f.submit "Send", class:"btn btn-primary"%>
  <%end%>
</div>
