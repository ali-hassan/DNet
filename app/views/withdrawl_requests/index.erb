      <div class="heading">
        <h2>Income</h2>
      </div>
      <div class="main-content-body">
        <%= form_for @withdrawl_request do |f| %>
          <h3><%= f.text_field :pts %> Pts</h3>
          <span>Total Balance</span>
          <br />
