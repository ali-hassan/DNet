<main class="main">
  <div class="main-content">
    <!-- Content Block 1 Start -->
    <div class="main-content-block">
      <div class="profile-header">
        <div class="profile-block">
          <div class="profile-block-image">
            <%=image_tag "ic_user.png", alt: "image descriptions"%>
          </div>
          <div class="profile-content-block">
            <h2 class="current-user-name"><%= current_user.full_name%></h2>
            <h3><%=current_user.username%></h3>
          </div>
        </div>
        <%= render 'profile_view_card' %>
      </div>
    </div>
    <!-- Content Block 1 End -->

    <!-- Content Block 2 Start -->
    <div class="main-content-block">
      <div class="heading">
        <h2>System Password</h2>
      </div>
      <div class="main-content-body">
        <div class="acount-holder">
          <%= form_for current_user, url: system_credentials_path(subdomain: 'office'), html: { method: 'post' } do |f|%>
            <div class="custom-dashboard-row">
              <div class="custom-dashboard-column">
                <label>Current Password</label>
                <%= f.text_field :current_password, type: "password"%>
              </div>
              <div class="custom-dashboard-column">
                <label>New Password</label>
                <%= f.text_field :password, type: "password"%>
              </div>
            </div>
            <!-- Signup Row End -->

            <!-- Signup Row Start -->
            <div class="custom-dashboard-row">
              <div class="custom-dashboard-column">
                <label>Re-Type Password</label>
                <%= f.text_field :password_confirmation, type: "password"%>
              </div>
            </div>
            <!-- Signup Row End -->

            <div class="button-holder">
              <input class="custom-btn" type="submit" value="Update Password">
            </div>
          <%end%>
        </div>

      </div>
    </div>
    <!-- Content Block 2 End -->
  </div>
</main>
