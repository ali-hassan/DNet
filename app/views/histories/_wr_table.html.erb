<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Detail</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.all.each do |transaction| %>
      <tr>
        <td><%= transaction.created_at.strftime("%b. %e %Y") %></td>
        <td><%= transaction.message %></td>
      </tr>
    <% end %>
    <%= will_paginate @transactions.all %>
  </tbody>
</table>
