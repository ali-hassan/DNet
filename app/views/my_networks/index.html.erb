
<div class='tree'>
  <ul>
    <li id="<%= dom_id current_user, :tree %>" data-load-default-tree>
      <a href="#"><%= current_user.username %></a>
    </li>
  </ul>
</div>

<style>
  .tree > ul{
    display: inline-block;
  }
  .tree{
      overflow: hidden;
    text-align: center;
  }
  .tree li a{
      position: relative;
      z-index: 0;
      height: 100px;
      width: 100px;
      padding: 75px 10px 10px;
      color: #000;
      font-size: 10px;
  }
  .tree li a:before{
      content: '';
      display: block;
      background-image: url('../assets/ic_user.png');
      background-repeat: no-repeat;
      position: absolute;
      top: 50%;
      left: 50%;
      height: 50px;
      width: 50px;
      -webkit-transform: translate(-50%,-70%);
      -moz-transform: translate(-50%,-70%);
      -ms-transform: translate(-50%,-70%);
      transform: translate(-50%,-70%);
  }
  .tree li a:after{
      content: '';
      display: block;
      background-color: #f2dc69;
      height: 30px;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: -1;
  }

</style>
