<!DOCTYPE html>
<html>
  <head>
    <title>ForexHomeTrade</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700%7CAllura" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div id="header">
          <div id="header-top">
            <ul>
              <li>
                <%= link_to :new_user_session do %>
                  <%= image_tag "btn-login.png" %>
                <% end %>
              </li>
              <li>
                <a href="#">
                  <%= image_tag "btn-register.png", alt: "login" %>
                </a>
              </li>
            </ul>
          </div>
          <div class="row">
            <div id="header-btm">
              <div class="logo">
                <%= image_tag "logo.png", class: "img-responsive centering" %>
              </div>
            </div>
            <div id="menu">
              <a class="menu-nav-icon" data-menu="#main-menu"><i class="ion-navicon"></i></a>
              <ul class="main-menu" id="main-menu">
                <li><a href="/">Home</a></li>
                <li class="drop-down"><a href="#">About Us</a>
                  <ul class="drop-down-menu drop-down-inner">
                    <li><a href="#">Forex Home Trade</a></li>
                    <li><a href="#">CEO</a></li>
                    <li><a href="#">Our Vision</a></li>
                    <li><a href="#">Why Us</a></li>
                  </ul>
                </li>
                <li><a href="#">Forex</a></li>
                <li class="drop-down"><a href="#">Income</a>
                  <ul class="drop-down-menu drop-down-inner">
                    <li><a href="#">Plans</a></li>
                    <li><a href="/affiliate_program">Affiliate Program</a></li>
                  </ul>
                </li>
                <li class="drop-down"><a href="#">Media</a>
                  <ul class="drop-down-menu drop-down-inner">
                    <li><a href="#">Presentation</a></li>
                    <li><a href="#">Brochure</a></li>
                    <li><a href="#">Gallery</a></li>
                    <li><a href="#">Videos</a></li>
                  </ul>
                </li>
                <li><a href="#">Contact</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      </div>
      </div>
    </header>


    <%= yield %>
    <footer>
    <div class="footer-top">
      <div class="row">
        <div class="col-sm-4">
          <div class="logo">
            <img src="<%= image_url "logo.png" %>" class="img-responsive centering">
          </div>
        </div>
        <div class="col-sm-4">
          <h2><img src="<%= image_url "icon-information.png" %>" class="img-responsive" /></h2>
          <ul>
            <li><a href="#">Terms &amp; Conditions</a></li>
            <li><a href="#">Presentation</a></li>
            <li><a href="#">Packages</a></li>
            <li><a href="/affiliate_program">Affiliate Program</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Videos</a></li>
          </ul>
        </div>
        <div class="col-sm-4">
          <h2><img src="<%= image_url "icon-contact.png" %>" class="img-responsive" /></h2>
          <ul>
            <li><a href="#"><i class="ion-social-facebook-outline"></i> www.forexhometrade.com</a></li>
            <li><a href="#"><i class="ion-social-facebook-outline"></i> www.office.forexhometrade.com</a></li>
            <li><a href="#"><i class="ion-email"></i> support@forexhometrade.com</a></li>
            <li><a href="#"><i class="ion-pin"></i> 1 Willengton Street, Central, Hong Kong</a></li>
          </ul>
        </div>
      </div>

    </div>
    <div class="footer-btm">
      <ul class="social-icons float-right">
        <li><a href="#"><i class="ion-social-facebook-outline"></i></a></li>
        <li><a href="#"><i class="ion-social-instagram-outline"></i></a></li>
        <li><a href="#"><i class="ion-social-twitter-outline"></i></a></li>
        <li><a href="#"><i class="ion-social-youtube-outline"></i></a></li>
      </ul><!-- social-icons -->
      <div class="clear"></div>
    </div>
  </footer>
  </body>
</html>

